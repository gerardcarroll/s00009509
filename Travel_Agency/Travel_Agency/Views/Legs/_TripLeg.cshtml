@model IEnumerable<Travel_Agency.Models.Leg>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (Model.Any())
{    
    <table class="table">
        <tr>
            <th>
                Start Location
                @*@Html.DisplayNameFor(model => model.StartLocation)*@
            </th>
            <th>
                Finish Location
                @*@Html.DisplayNameFor(model => model.FinishLocation)*@
            </th>
            <th>
                Start Date
                @*@Html.DisplayNameFor(model => model.StartDate)*@
            </th>
            <th>
                Finish Date
                @*@Html.DisplayNameFor(model => model.FinishDate)*@
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.TripID)
                </th>*@
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Trip.Name)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.StartLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FinishLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate, "ShortDateTime")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FinishDate, "ShortDateTime")
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
}

else
{
    <script>alert("This Trip has no Legs");</script>
}
