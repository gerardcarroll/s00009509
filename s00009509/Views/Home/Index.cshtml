<script>


    function getEmpDetails(id) {
        $("#loader2").css("display", "block");

        $.ajax({
            url: '@Url.Action("index", "Home")',
            data: { empId: id },
            type: 'GET',
            success: function (result) {
                //alert('Success');
                $("#empDetails").html(result);
            },

            error: function (error) {
                alert('Fail');
            }
        });
    }

</script>